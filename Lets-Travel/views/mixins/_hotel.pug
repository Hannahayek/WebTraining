mixin hotel(hotel)
 .hotel
    .hotel_img
      a(href='/all/'+hotel_id)
         img(src='/images/hotels/'+hotel.image)
    .hotel_info
      a(href='/all/'+hotel._id)
       h3=hotel.hotel_name
      hr
      p='star rating:'+hotel.star_rating
      p='Country:'+hotel.country
      p='cost per night $'+hotel.cost_per_night